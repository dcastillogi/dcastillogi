---
import { Image } from "astro:assets";
import { AWSIcon } from "../lib/icons";
import GridPattern from "./GridPattern.astro";
---

<header class="relative">
    <GridPattern />
    <div class="container mx-auto px-4 z-10 relative mt-24">
        <div class="flex flex-col items-center">
            <span class="flex gap-2 font-medium">
                Powered by <a
                    href="https://aws.amazon.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="mt-1"
                >
                    <AWSIcon className="w-10 h-auto" />
                </a>
                Cloud Infrastructure
            </span>
            <p class="text-7xl font-semibold text-center mt-4">
                Shaping <strong class="text-orange font-semibold">Tomorrow</strong> Through <strong class="text-orange font-semibold">Cloud</strong> Innovation
            </p>
            <h1 class="text-3xl text-center text-secondary mt-4">
                Cloud Analyst Trainee @<a
                    href="https://blend360.com/"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <Image
                        width={200}
                        height={41}
                        alt="Blend360"
                        src="/images/blend360_icon.jpeg"
                        class="inline h-8 -mt-1 w-auto"
                    />
                </a>, Computer Engineer <a
                    href="https://unal.edu.co/"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <Image
                        width={200}
                        height={85}
                        alt="Universidad Nacional de Colombia"
                        src="/images/unal_icon.jpeg"
                        class="inline h-8 -mt-1 w-auto"
                    />
                </a>
            </h1>
        </div>
    </div>
</header>
